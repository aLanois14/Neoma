@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<div class="row justify-content-md-center">
    <div class="col-md-6">

        <!-- EMAIL / NEW USER -->
        <section class="neobox mt-5">
            <div class="neobox-title">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="neobox-content extra-padding">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" autofocus/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center ">
                        <button type="submit" class="btn btn-large btn-default">Continuer</button>
                    </div>
                    
                </form>
            </div>
            <div class="neobox-footer text-center bg-soft-grey">
                <label> Vous n'avez pas encore de compte ?</label>
                <p class="mt-3">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-large btn-white">S'inscrire</a>
                </p>
            </div>
        </section>


        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
